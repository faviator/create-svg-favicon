{
  "compilerOptions": {
    "module": "ESNext",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "ESNext",
    "lib": ["ESNext", "DOM"]
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.ts"]
}
